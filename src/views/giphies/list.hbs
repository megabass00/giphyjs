<div class="card card-datatable">
    {{#if giphies}}
        <table class="datatable-js">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Giphy</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each giphies}}
                    <tr>
                        <td>{{ title }}</td>
                        <td><img height="30" src="{{ url }}" alt=""></td>
                        <td>{{ description }}</td>
                        <td>
                            <button class="btn btn-primary btn-clipboard" data-clipboard-text="{{ url }}">
                                <i class="far fa-copy"></i>
                            </button>
                            <a href="{{ url }}" class="btn btn-success" target="_blank" data-toggle="tooltip" data-placement="top" title="Open giphy url">
                                <i class="far fa-eye"></i>
                            </a>
                            <a href="/giphies/edit-giphy/{{ _id }}" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit giphy">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/giphies/delete/{{ _id }}" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Remove giphy">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-md-12 mx-auto text-center">
                <div class="alert alert-warning" role="alert">
                    In this moment there are not giphies...
                </div>
                <a href="/giphies/new-giphy" class="btn btn-main">
                    Create one!
                </a>
            </div>
        </div>
    {{/if}}
</div>